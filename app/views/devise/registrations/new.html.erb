<div class="container">
  <div class="row justify-content-center align-items-center" style="height:90vh">
    <div class="col-5">
      <h2>Регистрация</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: 'auth_form') do |f| %>
        <%= devise_error_messages! %>

        <div class="form-group">
          <%= f.label :Имя %><br />
          <%= f.text_field :user_name, autofocus: true, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label :Адрес %>
          <%= f.text_area :address, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label :Номер_телефона %>
          <%= f.text_field :phone_number, class: 'form-control phone-number'%>
        </div>

        <div class="form-group">
          <%= f.label :Дата_рождения %>
          <%= f.date_field :date_of_birth, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label :Пароль %>
          <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> символов минимум)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "off", class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label :Подтверждение_пароля %><br />
          <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.submit "Зарегестрироваться", class: 'btn btn-primary' %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>