<div class="col-sm-4">
  <div class="card">
    <%#= image_tag product.image.url(:thumb), class: 'card-img-top' %>
    <div class="card-body">
      <h5 class="card-title"><%= link_to product.product_name, product_path(product.id)%></h5>
      <p class="card-text">this is product</p>
      <%= button_to 'Добавить в корзину', line_items_path(product_id: product), class: 'btn btn-change', id:'category-add-btn', remote: true %>
    </div>
  </div>
</div>
