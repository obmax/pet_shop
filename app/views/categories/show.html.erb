<div>
  <div class="content-margins">
    <div class="container fonts">
      <h2 align="center"><%= @main_category.name %></h2>
    </div>
    <div class="col-sm-3 list-group category-list">
      <% @main_category.categories.each do |category| %>
        <%= link_to category.name, category_path(category.id), class: 'list-group-item list-group-item-action' %>
      <% end %>
    </div>
  </div>
  <%= render @products %>
  <div class="card" style="width: 18rem;">
    <img class="card-img-top" src="#" alt="Card image cap">
    <div class="card-body">
      <h5 class="card-title">Card title</h5>
      <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
      <a href="#" class="btn btn-primary">Go somewhere</a>
    </div>
  </div>
</div>
